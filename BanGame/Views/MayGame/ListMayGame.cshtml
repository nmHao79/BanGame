@model IEnumerable<BanGame.Models.MayGame>
@{
    ViewBag.Title = "ListMayGame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>THÔNG TIN MÁY GAME</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th> Mã loại </th>
        <th> Tên Máy Game</th>
        <th> Hình </th>
        <th> Giá bán</th>
        <th> Ngày cập nhật </th>
        <th> Số lượng tồn</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.maloai)</td>
            <td>@Html.DisplayFor(modelItem => item.tenmay)</td>
            <td><img src="@item.hinh" width="500px" height="400px" alt="hinh" /></td>
            <td>@Html.DisplayFor(modelItem => item.giaban)</td>
            <td>@Html.DisplayFor(modelItem => item.ngaycapnhap)</td>
            <td>@Html.DisplayFor(modelItem => item.soluongton)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.mamay }) |
                @Html.ActionLink("Detail", "Detail", new { id = item.mamay }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.mamay })
            </td>
        </tr>
    }
</table>
